gem 'high_voltage'

group :test, :development do
	gem 'rspec-rails'
	gem 'capybara', '1.1.4'
	gem 'simplecov'
	gem 'sqlite3'
end

group :test do 
	gem 'factory_girl_rails', '~> 4.0'
end

group :production do
	gem 'pg'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
